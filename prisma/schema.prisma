// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String     @id @default(cuid())
  email             String     @unique
  password          String
  warName           String
  rank              String
  company           String
  phone             String     @unique
  isAdmin           Boolean    @default(false)
  pixKey            String?
  pixQrCode         String?
  resetToken        String?
  resetTokenExpiry  DateTime?
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  consumptions Consumption[]
  charges      Charge[]
  products     Product[]

  @@map("users")
}

model Product {
  id        String @id @default(cuid())
  name      String @unique
  price     Float
  available Boolean @default(true)
  imageUrl  String @default("https://images.unsplash.com/photo-1509042239860-f550ce710b93?w=400&h=400&fit=crop")
  adminId   String

  admin       User         @relation(fields: [adminId], references: [id], onDelete: Cascade)
  consumptions Consumption[]

  @@map("products")
}

model Consumption {
  id        String   @id @default(cuid())
  userId    String
  productId String
  quantity  Int
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("consumptions")
}

model Charge {
  id        String   @id @default(cuid())
  userId    String
  amount    Float
  reason    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("charges")
}
